<Window
    x:Class="FloorAPP.PartnerHistoryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="История продаж"
    Width="800"
    Height="500"
    FontFamily="Segoe UI">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <!--  Заголовок  -->
        <Grid Grid.Row="0" Background="#F4E8D3">
            <TextBlock
                Name="txtTitle"
                Margin="20"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Text="История продаж партнера" />
        </Grid>

        <!--  Таблица истории  -->
        <DataGrid
            Name="dgHistory"
            Grid.Row="1"
            Margin="20"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="300"
                    Binding="{Binding Products.ProductName}"
                    Header="Наименование продукции" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Quantity}"
                    Header="Количество" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding SaleDate, StringFormat=dd.MM.yyyy}"
                    Header="Дата продажи" />
            </DataGrid.Columns>
        </DataGrid>

        <!--  Кнопка закрыть  -->
        <Button
            Name="btnClose"
            Grid.Row="2"
            Width="100"
            Height="35"
            Margin="20"
            HorizontalAlignment="Right"
            Background="#67BA80"
            BorderThickness="0"
            Click="btnClose_Click"
            Content="Закрыть"
            Foreground="White" />
    </Grid>
</Window> 